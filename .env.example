# Server
PORT=3000
NODE_ENV=development

# MongoDB (optional). If omitted or connection fails, the API will use mock in-memory data.
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Authentication
# If true, Basic Auth is enforced on mutating endpoints (POST/PUT/DELETE).
BASIC_AUTH_ENABLED=true

# Dummy password goes here
DUMMY_PASSWORD=password123
