{
  "name": "hopshare-api",
  "version": "1.0.1",
  "description": "HopShare - Intuitive, easy-to-use application that facilitates carpooling in an organized manner.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --watch . --ext js,json --exec node server.js",
    "test": "c8 -r text -r text-summary -r html -r json ava",
    "coverage": "c8 report -r text -r text-summary"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "mongoose": "^8.7.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "ava": "^6.1.3",
    "c8": "^9.1.0",
    "got": "^13.0.0"
  },
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ],
    "timeout": "60s",
    "environmentVariables": {
      "NODE_ENV": "test",
      "BASIC_AUTH_ENABLED": "true"
    }
  }
}